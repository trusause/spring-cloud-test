<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trusause.app.mapper.TeacherMapper">

    <resultMap id="BaseResultMap" type="com.trusause.app.domain.Teacher">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="delete_flag" jdbcType="BIT" property="deleteFlag"/>
    </resultMap>

    <select id="sel" resultType="com.trusause.app.domain.Teacher">
        select * from t_test_teacher where id = #{id}
    </select>

    <select id="selectByCode" parameterType="String" resultType="com.trusause.app.domain.Teacher">
        select * from t_test_teacher where code = "'"${code,jdbcType=VARCHAR}"'"
    </select>

    <select id="selectByName" resultType="com.trusause.app.domain.Teacher">
        select * from t_test_teacher
        <where>
            <if test="name!=null">
                name like CONCAT("%",#{name},"%")
            </if>
        </where>
    </select>

</mapper>
